{
  "manifest_version": 3,
  "name": "Chat Assistant",
  "version": "2.0",
  "description": "Chat assistant with side panel and page content attachment",
  "permissions": ["activeTab", "tabs", "sidePanel", "storage"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_title": "Open Chat"
  },
  "side_panel": {
    "default_path": "sidepanel.html"
  },
  "options_ui": {
    "page": "settings.html",
    "open_in_tab": true
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]
}
